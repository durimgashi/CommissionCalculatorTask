{
    "name": "durimgashi/commission-calculator",
    "description": "Skeleton for Commission Calculator",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    }
}
